<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>
<property>
    <name>dfs.namenode.name.dir</name>
    <value>file:/data/namenode</value>
</property>
<property>
  <name>dfs.ha.namenodes.mycluster</name>
  <value>nn1,nn2</value>
  <final>true</final>
</property>
<property>
<name>dfs.replication</name>
<value>2</value>
</property>
<property>
  <name>dfs.namenode.rpc-address.mycluster.nn1</name>
  <value>nn1.iitp.edu:9000</value>
</property>
<property>
  <name>dfs.namenode.rpc-address.mycluster.nn2</name>
  <value>nn2.iitp.edu:9000</value>
</property>
<property>
  <name>dfs.namenode.http-address.mycluster.nn1</name>
  <value>nn1.iitp.edu:50070</value>
</property>
<property>
  <name>dfs.namenode.http-address.mycluster.nn2</name>
  <value>nn2.iitp.edu:50070</value>
</property>
<property>
  <name>dfs.namenode.shared.edits.dir</name>
  <value>file:/home/sharededitsnn1</value>
</property>
<property>
  <name>dfs.client.failover.proxy.provider.mycluster</name>
  <value>org.apache.hadoop.hdfs.server.namenode.ha.ConfiguredFailoverProxyProvider</value>
</property>
<property>
  <name>dfs.ha.fencing.methods</name>
  <value>sshfence</value>
</property>
<!-- This is with root user/change accordingly -->
<property>
  <name>dfs.ha.fencing.ssh.private-key-files</name>
  <value>/root/.ssh/id_rsa</value>
</property>
<property>
  <name>dfs.ha.fencing.methods</name>
  <value>sshfence
         shell(/bin/true)
  </value>
</property>
<property>
    <name>dfs.datanode.data.dir</name>
    <value>file:/data/datanode</value>
</property>
<property>
  <name>dfs.nameservices</name>
  <value>mycluster</value>
<final>true</final>
</property>
<!-- This section is for Automatic Fail-over
Install Zookeeper on NN1,NN2 and RM
<property>
   <name>dfs.ha.automatic-failover.enabled</name>
   <value>true</value>
</property>
<property>
<name>ha.zookeeper.quorum</name>
<value>nn1:2181,nn2:2181,rm:2181</value>
</property>
end -->
</configuration>